<h1 class="text-2xl font-bold text-center text-green-800 mb-6">Add New Crop Details</h1>

<!-- Container for the form with styling for layout and appearance -->
<div class="bg-white p-8 rounded-lg shadow-md">
    <form id="add-crop-form">
        <fieldset class="border p-4 rounded-lg mb-6">
            <legend class="text-xl font-semibold px-2">Basic Details & Images</legend>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label for="name" class="block text-gray-700 font-bold mb-1">Crop Name:</label>
                    <input type="text" id="name" name="name" class="w-full px-3 py-2 border rounded-lg" required>
                </div>

                <div>
                    <label for="sowingSeason" class="block text-gray-700 font-bold mb-1">Sowing Season:</label>
                    <input type="text" id="sowingSeason" name="sowingSeason" class="w-full px-3 py-2 border rounded-lg">
                </div>

                <div>
                    <label for="growthDuration" class="block text-gray-700 font-bold mb-1">Growth Duration:</label>
                    <input type="text" id="growthDuration" name="growthDuration" class="w-full px-3 py-2 border rounded-lg">
                </div>
            </div>


            <!-- Grid layout for image uploads -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                <div>
                    <label for="coverImage" class="block text-gray-700 font-bold mb-1">Cover Image:</label>
                    <input type="file" id="coverImage" name="coverImage" class="w-full text-sm">
                </div>
                <div>
                    <label for="galleryImages" class="block text-gray-700 font-bold mb-1">Gallery Images (Max 5):</label>
                    <input type="file" id="galleryImages" name="galleryImages" class="w-full text-sm" multiple>
                </div>
            </div>
        </fieldset>


        <!-- Section for growth stages -->
        <fieldset class="border p-4 rounded-lg mb-6">
            <legend class="text-xl font-semibold px-2">Growth Stages</legend>
            <div id="growth-stages-container" class="space-y-3"></div>
            <button type="button" id="add-stage-btn" class="mt-2 bg-gray-500 text-white font-bold py-1 px-3 text-sm rounded-lg hover:bg-gray-600">
                + Add New Stage
            </button>
        </fieldset>

        
        <!-- Section for disease management -->
        <fieldset class="border p-4 rounded-lg mb-6">
            <legend class="text-xl font-semibold px-2">Disease Management</legend>
            <div id="diseases-container" class="space-y-4"></div>
            <button type="button" id="add-disease-btn" class="mt-2 bg-gray-500 text-white font-bold py-1 px-3 text-sm rounded-lg hover:bg-gray-600">
                + Add New Disease
            </button>
        </fieldset>


        <!-- Section for fertilizers and price details -->
        <fieldset class="border p-4 rounded-lg">
            <legend class="text-xl font-semibold px-2">Fertilizers </legend>
            <div id="fertilizers-container" class="space-y-3"></div>
            <button type="button" id="add-fertilizer-btn" class="mt-2 bg-gray-500 text-white font-bold py-1 px-3 text-sm rounded-lg hover:bg-gray-600">
                + Add Fertilizer Recommendation
            </button>
        </fieldset>


        <!-- Submit button for saving the crop -->
        <div class="text-center mt-8">
            <button type="submit" class="bg-blue-700 text-white font-bold py-3 px-8 rounded-lg text-lg hover:bg-blue-800">
                Save Crop
            </button>
        </div>
    </form>

    <!-- Container for displaying form submission messages -->
    <div id="form-message" class="mt-4 text-center"></div>
</div>


<!-- Include the admin JavaScript file for form functionality -->
<script src="/js/admin.js"></script>