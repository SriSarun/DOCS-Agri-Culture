<!-- Main heading for the crop guide page -->
<h1 class="text-3xl font-bold text-center text-green-800 mb-4">Crop Guide</h1>


<!-- Search input for filtering crops by name -->
<div class="mb-8 max-w-lg mx-auto">
    <input 
        type="search" 
        id="search-box" 
        placeholder="Search by crop name..."
        class="w-full px-4 py-3 border border-gray-300 rounded-full shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500"
    >
</div>


<!-- Dropdown filters for season and growth duration -->
<div class="flex flex-col sm:flex-row justify-center items-center gap-4 mb-8">
    <select id="season-filter" class="w-full sm:w-auto px-4 py-2 border rounded-md bg-white">
        <option value="">All Sowing Seasons</option>
    </select>
    <select id="duration-filter" class="w-full sm:w-auto px-4 py-2 border rounded-md bg-white">
        <option value="">All Growth Durations</option>
    </select>
</div>


<!-- Container for displaying the list of crops -->
<div id="crop-list-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <p id="loading-message" class="col-span-full text-center text-gray-500">Loading crops...</p>
</div>



<!-- Include the main JavaScript file for client-side functionality -->
<script src="/js/main.js"></script>