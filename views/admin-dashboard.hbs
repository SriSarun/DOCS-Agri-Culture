<!-- Main heading for the admin dashboard page -->
<h1 class="text-3xl font-bold text-center text-green-800 mb-8">Admin Dashboard</h1>


<!-- Container for the crop data table with styling -->
<div class="bg-white p-8 rounded-lg shadow-md">
    <div class="overflow-x-auto">
        <table class="min-w-full">

            <!-- Table header with column titles -->
            <thead class="bg-gray-100">
                <tr>
                    <th class="p-3 text-left">Crop Name</th>
                    <th class="p-3 text-left">Sowing Season</th>
                    <th class="p-3 text-center">Actions</th>
                </tr>
            </thead>


            <!-- Table body for dynamically populated crop data -->
            <tbody id="crop-table-body">
                <tr>
                    <td colspan="3" class="p-4 text-center text-gray-500">Loading data...</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<!-- Include the admin dashboard JavaScript file for table functionality -->
<script src="/js/admin-dashboard.js"></script>